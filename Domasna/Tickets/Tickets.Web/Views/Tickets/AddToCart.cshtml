@model Tickets.Domain.DTO.AddToCartDto
@{
	ViewData["Title"] = "Add to Cart";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adding ticket to cart</h1>
<hr />


<div class="row">
	<div class="col-md-4 m-auto">
		<form asp-action="AddToCart" method="post">
			<input type="hidden" asp-for="@Model.TicketID" />
			<div class="form-group">
				<label asp-for="@Model.SelectedTicket.Title"></label>
				<input disabled asp-for="@Model.SelectedTicket.Title" class="form-control"/>
			</div>

			<div class="form-group">
				<label asp-for="quantity"></label>
				<input asp-for="quantity" class="form-control" />
			</div>
			
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>
